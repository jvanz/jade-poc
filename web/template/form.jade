mixin field(field, data)
	.form-group
		label(for=field.id)= field.label
		input(id=field.id, name=field.name, type=field.type)

mixin fieldWithValue(field, data)
	.form-group
		label(for=field.id)= field.label
			input(id=field.id, name=field.name, type=field.type,
				value=data[field.id])

#actions.row
	each action in form.actions
		button(id=action.type, class="btn btn-default col-md-4",
		onclick="javascript:form_action('" + action.type + "', '" +
		action.endpoint + "')") #{action.label}
form#form
	each field in form.fields
		unless form.data
			+field(field, form.data)
		else
			+fieldWithValue(field, form.data)
